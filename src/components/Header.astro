---
import Menu from "../components/Menu.astro";
import { Image } from "astro:assets";
import soil from "../assets/soil.png";
---

<header>
    <h1><a href="/">SOIL's WIKI</a></h1>
    <p>
        This page is soil's wiki page.<br />
        Powered by Astro & microCMS.
    </p>
    <Image src={soil} alt="soil logo" width={100} />
    <Menu />
</header>

<style>
    header {
        width: 100%;
        position: relative;
    }
    header h1 a {
        color: #000;
        list-style: none;
    }
    header img {
        position: absolute;
        right: 10px;
        top: 10px;
    }
</style>
